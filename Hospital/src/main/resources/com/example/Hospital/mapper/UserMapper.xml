<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Hospital.mapper.UserMapper">
    <resultMap id="userMap" type="com.example.Hospital.domain.User">
        <id column="uid" property="uid" />
            <result column="username" property="username" />
            <result column="password" property="password" />
            <result column="role" property="role" />
    </resultMap>
    <select id="findByUsername" parameterType="String" resultMap="userMap">
        select * from user where username=#{username}
    </select>
    <select id="findAll" resultMap="userMap">
        select * from user
    </select>
    <insert id="insertUser" parameterType="com.example.Hospital.domain.User">
        insert into user(uid, username, password, role) value(#{uid},#{username},#{password},#{role})
    </insert>
    <update id="changeUser" parameterType="com.example.Hospital.domain.User">
        update user set uid=#{uid}, username=#{username}, role=#{role} where uid=#{uid}
    </update>
    <delete id="deleteUser" parameterType="Integer">
        delete from user where uid=#{uid}
    </delete>

    <select id="countUsersByRole" resultType="java.util.Map">
        SELECT role, COUNT(*) as count FROM user GROUP BY role
    </select>

    <select id="findUsersByPage" resultType="com.example.Hospital.domain.User">
        SELECT * FROM user
    </select>
</mapper>