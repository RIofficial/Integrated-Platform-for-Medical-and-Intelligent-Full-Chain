<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.Hospital.mapper.FinanceMapper">

    <resultMap id="financeMap" type="com.example.Hospital.domain.Finance">
        <id column="fid" property="fid" />
        <result column="rid" property="rid" />
        <result column="bill" property="bill" />
    </resultMap>

    <select id="findAll" resultMap="financeMap">
        select * from finance
    </select>

    <select id="findByFid" parameterType="String" resultMap="financeMap">
        select * from finance where fid = #{fid}
    </select>

    <insert id="insertFinance" parameterType="com.example.Hospital.domain.Finance">
        insert into finance(fid, rid, bill) values(#{fid}, #{rid}, #{bill})
    </insert>

    <update id="changeFinance" parameterType="com.example.Hospital.domain.Finance">
        update finance set rid = #{rid}, bill = #{bill} where fid = #{fid}
    </update>

    <delete id="deleteFinance" parameterType="String">
        delete from finance where fid = #{fid}
    </delete>

</mapper>
